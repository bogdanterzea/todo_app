
<h1>Lists</h1>

<table class="table table-bordered">

  <tbody>
    <% @lists.each do |list| %>
    <% if list.completed %>

      <tr class="table-secondary">
        <td class="striker"><%= link_to list.description , edit_list_path(list) %></td>
        <td>
          <center>
            <%= form_for(list) do |f| %>
            <%= f.text_field :description, type: 'hidden' %>
            <%= f.check_box :completed, :checked => false, :style => 'visibility: hidden' %>
            <%= f.submit "Uncheck", class: 'btn btn-outline-secondary btn-sm' %>
            <% end %>
          </center>
        </td>
        <td><%= link_to 'Delete', list, class: 'btn-outline-danger btn-sm', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% else %>
      <tr>
        <td><%= link_to list.description , edit_list_path(list) %></td>
        <td>
          <center>
            <%= form_for(list) do |f| %>
              <%= f.text_field :description, type: 'hidden' %>
              <%= f.check_box :completed, :checked => true, :style => 'visibility: hidden' %>
              <%= f.submit "Check", class: 'btn btn-outline-secondary btn-sm' %>
            <% end %>
          </center>
        </td>
        <td><%= link_to 'Delete', list, class: 'btn-outline-danger btn-sm', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>

